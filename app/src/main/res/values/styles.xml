<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText Styles -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomTextext" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- MaterialCardView Styles -->
    <style name="CustomCardView">
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
    </style>

    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Primary color for the header -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Accent color for selected date -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/editTextBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SectionHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="TableHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TableCell">
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>