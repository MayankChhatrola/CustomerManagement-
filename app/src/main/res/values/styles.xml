<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText Styles -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- MaterialCardView Styles -->
    <style name="CustomCardView">
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_2sdp</item>
    </style>

    <style name="CustomMaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- Primary color for the header -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Accent color for selected date -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

</resources>